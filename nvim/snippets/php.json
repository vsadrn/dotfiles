{
  "class ...": {
    "prefix": "c)",
    "body": [
      "/**",
      "* TODO: Write description",
      "* ",
      "* Example usage: ",
      "* ",
      "* @package ${1: ClassName}",
      "* @author Adrian Vesa <hello@adrianvesa.ro>",
      "* @version 1.0",
